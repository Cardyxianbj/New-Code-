<script>
  const dummyData = {
    "2025-05": {
      activeCustomers: 120,
      totalMRR: 40000,
      collected: 20000
    },
    "2025-04": {
      activeCustomers: 110,
      totalMRR: 36000,
      collected: 31000
    },
    "2025-03": {
      activeCustomers: 100,
      totalMRR: 34000,
      collected: 32000
    }
  };

  const monthSelector = document.getElementById("monthSelector");
  const activeCustomersEl = document.getElementById("activeCustomers");
  const totalMRREl = document.getElementById("totalMRR");
  const collectedEl = document.getElementById("collected");
  const remainingEl = document.getElementById("remaining");

  function animateValue(el, start, end) {
    let current = start;
    const step = Math.ceil((end - start) / 20);
    const interval = setInterval(() => {
      current += step;
      if ((step > 0 && current >= end) || (step < 0 && current <= end)) {
        current = end;
        clearInterval(interval);
      }
      el.textContent = "$" + current.toLocaleString();
    }, 20);
  }

  function updateDashboard(month) {
    const data = dummyData[month] || { activeCustomers: 0, totalMRR: 0, collected: 0 };
    const remaining = data.totalMRR - data.collected;

    activeCustomersEl.textContent = data.activeCustomers;
    animateValue(totalMRREl, 0, data.totalMRR);
    animateValue(collectedEl, 0, data.collected);
    animateValue(remainingEl, 0, remaining);
  }

  monthSelector.addEventListener("change", (e) => {
    updateDashboard(e.target.value);
  });

  // Initial Load
  updateDashboard(monthSelector.value);
</script>
